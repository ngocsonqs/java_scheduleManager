#
# Scheduler log4j setting
#
log4j.rootCategory=FATAL,DEFAULT
log4j.additivity.co.whizz_tech.scheduler=false
log4j.logger.jp.co.whizz_tech.scheduler=DEBUG,DEFAULT
log4j.additivity.net..jp.co.whizz_tech.ocean=false
log4j.logger.co.whizz_tech.ocean=INFO,DEFAULT

# DEFAULT
log4j.appender.DEFAULT=org.apache.log4j.DailyRollingFileAppender
log4j.appender.DEFAULT.File=./log/scheduler.log
log4j.appender.DEFAULT.DatePattern='.'yyyy-MM-dd
log4j.appender.DEFAULT.layout=org.apache.log4j.PatternLayout
log4j.appender.DEFAULT.layout.ConversionPattern=%d [%-5p] %F:%L - %m%n

